    "eslint-plugin-import": "^2.25.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prettier": "~2.2.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.0.0",
