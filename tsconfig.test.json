{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./",
    "declaration": false,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./test",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "inlineSourceMap": true
  },
  "lib": ["es2015"],
  "include": ["test/**/*", "utils/**/*"],
  "exclude": ["node_modules"]
}
